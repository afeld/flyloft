- content_for :additional_head_info do
  = auto_discovery_link_tag

%h1 Gigs

= link_to 'Add a gig!', new_gig_path

%table
  %tr
    %th Title
    %th Organization
    %th Location
    %th Post date
    %th Expire date
    %th
    %th
    %th

  - @gigs.each do |gig|
    %tr
      %td= gig.title
      %td= gig.org || gig.company
      %td= gig.location
      %td= gig.post_at
      %td= gig.expire_at
      %td= link_to 'Show', gig
      %td= link_to 'Edit', edit_gig_path(gig)
      %td= link_to 'Destroy', gig, :confirm => 'Are you sure?', :method => :delete

%br
