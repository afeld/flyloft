!!!
%html
  %head
    %title Flyloft
    = stylesheet_link_tag :all, :recursive => true
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"
    = javascript_include_tag :all
    = csrf_meta_tag
    = yield :additional_head_info
  %body
    #wrapper
      #header
        %h1
          = link_to "Welcome to Flyloft!", root_path
        #account
          - if user_signed_in?
            #{current_user.first_name} #{current_user.last_name.first}.
            = link_to "My Account", my_account_path
            = link_to "Sign out", sign_out_path
          - else
            = link_to "Sign up", sign_up_path
            or
            = link_to "sign in", sign_in_path
      #nav-bar
        = render_navigation
        .clear
      - if notice
        #notice
          = notice
      - if alert
        #alert
          = alert
      #contents
        = yield
